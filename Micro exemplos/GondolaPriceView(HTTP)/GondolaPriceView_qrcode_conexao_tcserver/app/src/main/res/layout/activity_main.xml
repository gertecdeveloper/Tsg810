<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <EditText
        android:id="@+id/ipServEdtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IP do Servidor"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/servidorButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Salvar IP Servidor"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:layout_below="@+id/ipServEdtxt"
        android:layout_marginTop="12dp" />

    <!-- Linha divisória -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_below="@id/servidorButton"
        android:layout_marginTop="8dp" />
    <!-- Código de Barras -->
    <TextView
        android:id="@+id/barcodeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Código de Barras:"
        android:textSize="24sp"
        android:textColor="#333333"
        android:layout_below="@id/servidorButton"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true" />

    <!-- Linha divisória -->
    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_below="@id/barcodeTextView"
        android:layout_marginTop="8dp" />

    <!-- Descrição do Produto -->
    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do  Produto:"
        android:textSize="20sp"
        android:textColor="#666666"
        android:layout_below="@id/divider1"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true" />

    <!-- Linha divisória -->
    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_below="@id/descriptionTextView"
        android:layout_marginTop="8dp" />

    <!-- Preço Normal -->
    <TextView
        android:id="@+id/price1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preço 1 :"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_below="@id/divider2"
        android:layout_marginTop="24dp"
        android:layout_alignParentStart="true" />

    <!-- Linha divisória -->
    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_below="@id/price1TextView"
        android:layout_marginTop="8dp" />

    <!-- Preço Promocional -->
    <TextView
        android:id="@+id/price2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preço 2 : "
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_below="@id/divider3"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true" />

    <!-- Linha divisória -->
    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_below="@id/price2TextView"
        android:layout_marginTop="8dp" />

    <!-- Botão de Escanear QR Code -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/scanQrCodeButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Escanear QR Code"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:layout_below="@id/divider4"
        android:layout_marginTop="32dp"
        android:clickable="false"/>

    <!-- Botão de Imprimir -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/print_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Imprimir"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:layout_below="@id/scanQrCodeButton"
        android:layout_marginTop="16dp"
        android:clickable="false"/>

    <TextView
        android:id="@+id/erroTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_below="@id/print_button"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true" />

</RelativeLayout>
